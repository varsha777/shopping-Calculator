<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linear_image_show_pop"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.billbooking.oms.billbooking.DashBoardFragments.POP.PopImage">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:id="@+id/intro"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                android:weightSum="3">


                <Button
                    android:id="@+id/to_pos_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:background="@drawable/edittext"
                    android:text="From" />

                <EditText
                    android:id="@+id/display_id_image"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:layout_weight="1.7"
                    android:background="@drawable/edittext"
                    android:cursorVisible="false"
                    android:hint="Display ID"
                    android:inputType="text"
                    android:maxLength="8"
                    android:maxLines="1"
                    android:textAlignment="center" />


                <Button
                    android:id="@+id/qr_scan_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/edittext"
                    android:text="qr scan" />

            </LinearLayout>


            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_view_pos_image"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_below="@id/hedding"
                android:background="#e1e499"
                android:scrollbars="vertical" />


            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_view_pos_show_image"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_below="@id/hedding"
                android:scrollbars="vertical" />

            <LinearLayout
                android:id="@+id/add_row"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp"
                android:weightSum="4">

                <ImageView
                    android:id="@+id/commodity_image"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_weight="0.5"
                    app:srcCompat="@drawable/add_a_photo" />

                <AutoCompleteTextView
                    android:id="@+id/commodity_name_image1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:hint="Commodity"
                    android:inputType="textPersonName"
                    android:textAlignment="center" />

                <EditText
                    android:id="@+id/commodity_quantity_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="10dp"
                    android:hint="Quantity"
                    android:inputType="number"
                    android:textAlignment="center" />


                <EditText
                    android:id="@+id/commodity_price_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="2"
                    android:hint="Price"
                    android:inputType="number"
                    android:textAlignment="center" />


            </LinearLayout>


            <Button
                android:id="@+id/add_item_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/recycler_view_pos"
                android:layout_marginTop="2dp"
                android:background="@drawable/button"
                android:text="+"
                android:textAlignment="center"
                android:textSize="30dp" />

            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/add_item"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:weightSum="4">

                <Button
                    android:id="@+id/print_pop_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/edittext"
                    android:text="Share" />

                <Button
                    android:id="@+id/paid_pop_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/edittext"
                    android:text="Done" />


                <Button
                    android:id="@+id/save_image_pop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/edittext"
                    android:text="Save" />

                <Button
                    android:id="@+id/show_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/edittext"
                    android:text="Show" />

            </LinearLayout>


        </LinearLayout>

    </ScrollView>

</LinearLayout>
