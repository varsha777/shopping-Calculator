<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.billbooking.oms.billbooking.DashBoardFragments.ReportScreen.ReportScreen1">

    <TextView
        android:id="@+id/sales_total"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp" />


    <com.github.mikephil.charting.charts.BarChart
        android:id="@+id/sales_barchart"
        android:layout_width="match_parent"
        android:layout_height="200dp" />

    <TextView
        android:id="@+id/purchses_total"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:text="Purchases" />

    <com.github.mikephil.charting.charts.BarChart
        android:id="@+id/purchase_barchart"
        android:layout_width="match_parent"
        android:layout_height="200dp" />

</LinearLayout>
