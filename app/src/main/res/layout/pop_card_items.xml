<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    app:cardCornerRadius="3dp"
    app:cardElevation="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:orientation="horizontal"
        android:weightSum="4">

        <ViewSwitcher xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/my_switcher_commodity"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/commodity_text"
                android:layout_width="110dp"
                android:layout_height="match_parent"
                android:clickable="true"
                android:text="Commodity"
                android:textAlignment="center"
                android:textSize="20dp" />

            <AutoCompleteTextView
                android:id="@+id/commodity_edit"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:cursorVisible="true"
                android:focusableInTouchMode="true"
                android:hint="Commodity Name"
                android:inputType="textPersonName">

                <requestFocus />
            </AutoCompleteTextView>
        </ViewSwitcher>

        <ViewSwitcher xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/my_switcher_quantity"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/quantity_text"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:clickable="true"
                android:text="Quantity"
                android:textAlignment="center"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/quantity_edit"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:cursorVisible="true"
                android:hint="Quantity"
                android:inputType="number"
                android:text="" />
        </ViewSwitcher>

        <ViewSwitcher xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/my_switcher_price"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/price_text"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:clickable="true"
                android:text="Price"
                android:textAlignment="center"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/price_edit"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:cursorVisible="true"
                android:hint="Price"
                android:inputType="number" />
        </ViewSwitcher>

        <ViewSwitcher xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/my_switcher_total"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/total_text"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:text="Total"
                android:textAlignment="center"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/total_edit"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:hint="Total"
                android:inputType="textPersonName"
                android:text="Total" />
        </ViewSwitcher>


    </LinearLayout>


</android.support.v7.widget.CardView>